<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml">
    <center>
        <GridPane styleClass="bg-pane" id="GridPane" prefHeight="960" prefWidth="720" alignment="center" gridLinesVisible="false" vgap="20">
            <ImageView id="logo" GridPane.rowIndex="0" GridPane.halignment="CENTER" fitHeight="160.0" fitWidth="320.0" pickOnBounds="true" preserveRatio="true">
                <image>
                  <Image url="@/images/universim_rounded_logo.png"/>
                </image>
            </ImageView>
            <VBox styleClass="form-box" prefHeight="160.0" prefWidth="320.0" spacing="7" GridPane.rowIndex="1">
                <TextField id="username" promptText="Identifiant">
                    <tooltip>
                        <Tooltip text="Votre pseudo Minecraft ou l'email de votre compte Microsoft." />
                     </tooltip> 
                </TextField>
                <PasswordField id="password" promptText="Mot de passe">
                    <tooltip>
                        <Tooltip text="Votre mot de passe." />
                     </tooltip> 
                </PasswordField>
                <HBox spacing="5" alignment="TOP_RIGHT">
                    <Label>Ram allouée</Label>
                    <ComboBox id="ram-selector" promptText="ram allouée">
                    </ComboBox>
                </HBox>
                <HBox spacing="5" alignment="TOP_LEFT">
                    <CheckBox id="remember-me"></CheckBox>
                    <Label>Se souvenir de moi</Label>
                </HBox>
            <Button styleClass="rounded-button" id="launch" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Jouer !" />
            </VBox>
        </GridPane>
    </center>
    <bottom>
        <VBox id="footer" fillWidth="true">
            <VBox styleClass="padded-container">
                <Text id="login-info"></Text>
            </VBox>
            <ProgressBar id="launching-status-bar" prefWidth="1920" styleClass="progress-bar"></ProgressBar>
        </VBox>
    </bottom>
</BorderPane>
